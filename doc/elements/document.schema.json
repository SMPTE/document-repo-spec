{
  "type": "object",
  "properties": {
    "type": {
      "enum": [ "st", "rp", "eg", "ov" ]
    },
    "number": {
      "type": "integer",
      "minimum": 0
    },
    "title": {
      "type": "string"
    },
    "state": {
      "enum": [ "active", "stabilized", "withdrawn" ]
    },
    "icsSet": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
      }
    },
    "notes": {
      "type": "string"
    },
    "statement": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^[0-9]{4}(-[0-9]{2}(-[0-9]{2})?)?$"
        },
        "file": {
          "type": "object",
          "properties": {
            "mediaType": { "type": "string" },
            "path": { "type": "string" }
          },
          "required": [ "date" ]
        }
      },
      "required": [ "mediaType", "path" ]
    }
  },
  "required": [ "type", "state" ]
}