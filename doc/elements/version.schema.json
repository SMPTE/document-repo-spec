{
  "type": "object",
  "properties": {
    "stage": {
      "enum": [ "wd", "cd", "fcd", "dp", "pub" ]
    },
    "timestamp": {
      "type": "string",
      "pattern": "^[0-9]{4}(-[0-9]{2}(-[0-9]{2})?)?$"
    },
    "main": {
      "type": "array",
      "items": { "$ref": "#/definitions/file" }
    },
    "media": {
      "type": "array",
      "items": { "$ref": "#/definitions/file" }
    },
    "deprecatedDesignations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "file": { "$ref": "#/definitions/file" }
        },
        "required": [ "title", "file" ]
      }
    },
    "amends": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "number": {
          "type": "integer"
        }
      },
      "required": [ "version", "number" ]
    }
  },
  "required": [ "stage", "timestamp", "main" ],
  "definitions": {
    "file": {
      "type": "object",
      "properties": {
        "mediaType": { "type": "string" },
        "path": { "type": "string" }
      },
      "required": [ "mediaType", "path" ]
    }
  }
}